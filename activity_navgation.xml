<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Green "div" with text -->
    <LinearLayout
        android:id="@+id/greenDiv"
        android:layout_width="match_parent"
        android:layout_height="250px"

        android:background="#06BE1A"> <!-- Green color -->

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="55dp"
            android:src="@drawable/ellipse7"
            android:layout_marginTop="70px"
            android:layout_marginBottom="20px"
            android:layout_marginLeft="50px"
            />
        <!-- Text inside the "div" -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40px"
            android:layout_marginTop="10px"
            android:padding="16dp"
            android:text="Pratyoosh"

            android:textColor="#FFFFFF"
            android:textSize="60px"
            android:textFontWeight="900"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16px"
            android:padding="16dp"
            android:text="\n+91-1234567890"
            android:textColor="#FFFFFF"
            android:textSize="40px"
            android:textFontWeight="900"
            android:layout_marginLeft="-367px"
            />


    </LinearLayout>
    <LinearLayout
        android:id="@+id/menuListView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/greenDiv"
        android:layout_marginTop="5dp"
        android:orientation="vertical"

        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="55dp"
                android:src="@drawable/home_3_line"
                android:layout_marginTop="70px"
                android:layout_marginBottom="20px"
                android:layout_marginLeft="50px"
                />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="40px"
                android:layout_marginTop="70px"
                android:padding="16dp"
                android:text="HomePage"
                android:textColor="#526581"
                android:textSize="55px"
                android:textFontWeight="900"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="55dp"
                android:src="@drawable/clipboard_line"
                android:layout_marginTop="70px"
                android:layout_marginBottom="20px"
                android:layout_marginLeft="50px"
                />

            <TextView
                android:id="@+id/guide"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="40px"
                android:layout_marginTop="70px"
                android:padding="16dp"
                android:text="Guidelines"
                android:textColor="#526581"
                android:textSize="55px"
                android:textFontWeight="900"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="55dp"
                android:src="@drawable/schedule_line"
                android:layout_marginTop="70px"
                android:layout_marginBottom="20px"
                android:layout_marginLeft="50px"

                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="40px"
                android:layout_marginTop="70px"
                android:padding="16dp"
                android:text="Schedules"
                android:textColor="#526581"
                android:textSize="55px"
                android:textFontWeight="900"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="55dp"
                android:src="@drawable/message_3_line"
                android:layout_marginTop="70px"
                android:layout_marginBottom="20px"
                android:layout_marginLeft="50px"

                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="40px"
                android:layout_marginTop="70px"
                android:padding="16dp"
                android:text="Tracking"
                android:textColor="#526581"
                android:textSize="55px"
                android:textFontWeight="900"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="55dp"
                android:src="@drawable/inbox_2_line"
                android:layout_marginTop="70px"
                android:layout_marginBottom="20px"
                android:layout_marginLeft="50px"

                />
            <TextView
                android:id="@+id/report1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="40px"
                android:layout_marginTop="70px"
                android:padding="16dp"
                android:text="Report"
                android:textColor="#526581"
                android:textSize="55px"
                android:textFontWeight="900"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="55dp"
                android:src="@drawable/badgecheckoutline"
                android:layout_marginTop="70px"
                android:layout_marginBottom="20px"
                android:layout_marginLeft="50px"

                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="40px"
                android:layout_marginTop="70px"
                android:padding="16dp"
                android:text="Rewards"
                android:textColor="#526581"
                android:textSize="55px"
                android:textFontWeight="900"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="55dp"
                android:src="@drawable/chart_bar_line"
                android:layout_marginTop="70px"
                android:layout_marginBottom="20px"
                android:layout_marginLeft="50px"

                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="40px"
                android:layout_marginTop="70px"
                android:padding="16dp"
                android:text="Rating"
                android:textColor="#526581"
                android:textSize="55px"
                android:textFontWeight="900"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="55dp"
                android:src="@drawable/settings_3_line"
                android:layout_marginTop="70px"
                android:layout_marginBottom="20px"
                android:layout_marginLeft="50px"

                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="40px"
                android:layout_marginTop="70px"
                android:padding="16dp"
                android:text="Settings"
                android:textColor="#526581"
                android:textSize="55px"
                android:textFontWeight="900"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="55dp"
                android:src="@drawable/plus"
                android:layout_marginTop="70px"
                android:layout_marginBottom="20px"
                android:layout_marginLeft="50px"

                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="40px"
                android:layout_marginTop="70px"
                android:padding="16dp"
                android:text="Feedback"
                android:textColor="#526581"
                android:textSize="55px"
                android:textFontWeight="900"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="55dp"
                android:src="@drawable/entrance_line"
                android:layout_marginTop="100px"
                android:layout_marginBottom="20px"
                android:layout_marginLeft="50px"

                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="40px"
                android:layout_marginTop="100px"
                android:padding="16dp"
                android:text="Logout"
                android:textColor="#CCFD6363"
                android:textSize="55px"
                android:textFontWeight="900"


                />
        </LinearLayout>
    </LinearLayout>


    <!-- Rest of your content goes here -->

</RelativeLayout>
