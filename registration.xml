<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:gravity="center"
    android:background="#EEEEEE">

        <ImageView
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:src="@drawable/shapes"
            android:outlineAmbientShadowColor="#8DE8968F"/>


        <TextView
            android:id="@+id/create_ac"
            android:layout_width="311dp"
            android:layout_height="71dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="65dp"
            android:layout_marginTop="54dp"
            android:layout_marginEnd="50dp"
            android:layout_marginBottom="50dp"
            android:fontFamily="@font/inter_bold"
            android:gravity="center"

            android:text="@string/create_ac"
            android:textColor="@color/black"
            android:textSize="30sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/please_ente"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="99dp"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="112dp"
            android:gravity="center_vertical"
            android:text="@string/please_ent"
            android:textAppearance="@style/please_ent" />

        <EditText
            android:id="@+id/fullname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/please_ente"
            android:layout_marginStart="18dp"
            android:paddingStart="14dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="18dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/box_bg"
            android:drawableStart="@drawable/baseline_person_outline_24"
            android:drawablePadding="20dp"
            android:hint="Full name"
            android:padding="10dp"
            android:textSize="15sp"
            android:fontFamily="@font/inter"
            android:textColor="@color/black" />
        <EditText
            android:id="@+id/phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/fullname"
            android:paddingStart="14dp"
            android:layout_marginStart="18dp"
            android:layout_marginTop="3sp"
            android:layout_marginEnd="18dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/box_bg"
            android:drawableStart="@drawable/baseline_phone_24"
            android:drawablePadding="20dp"
            android:hint="Phone number"
            android:padding="10dp"
            android:textSize="15sp"
            android:fontFamily="@font/inter"
            android:textColor="@color/black"/>
        <EditText
            android:id="@+id/email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/phone"
            android:paddingStart="14dp"
            android:layout_marginStart="18dp"
            android:layout_marginTop="3sp"
            android:layout_marginEnd="18dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/box_bg"
            android:drawableStart="@drawable/baseline_email_24"
            android:drawablePadding="20dp"
            android:textSize="15sp"
            android:fontFamily="@font/inter"
            android:hint="E-mail"
            android:padding="10dp"
            android:textColor="@color/black"
             />
        <EditText
            android:id="@+id/birth"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/email"
            android:layout_marginStart="18dp"
            android:layout_marginTop="3sp"
            android:layout_marginEnd="18dp"
            android:paddingStart="14dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/box_bg"
            android:drawableStart="@drawable/baseline_date_range_24"
            android:drawablePadding="20dp"
            android:hint="Date of birth"
            android:textSize="15sp"
            android:fontFamily="@font/inter"
            android:padding="10dp"
            android:textColor="@color/black" />
        <EditText
            android:id="@+id/address1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/birth"
            android:layout_marginStart="18dp"
            android:layout_marginTop="3sp"
            android:paddingStart="14dp"
            android:layout_marginEnd="18dp"
            android:layout_marginBottom="18dp"
            android:background="@drawable/box_bg"
            android:drawableStart="@drawable/baseline_house_24"
            android:drawablePadding="10dp"
            android:hint="Address line 1"
            android:textSize="15sp"
            android:fontFamily="@font/inter"

            android:padding="10dp"
            android:textColor="@color/black"/>
        <EditText
            android:id="@+id/address2"
            android:paddingStart="14dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/address1"
            android:layout_marginStart="18dp"
            android:layout_marginTop="3sp"
            android:layout_marginEnd="18dp"
            android:layout_marginBottom="14dp"
            android:background="@drawable/box_bg"
            android:drawablePadding="10dp"
            android:drawableStart="@drawable/baseline_house_24"
            android:hint="Address line 2"
            android:padding="10dp"
            android:textSize="15sp"
            android:fontFamily="@font/inter"
            android:textColor="@color/black"
             />
        <RelativeLayout
            android:id="@+id/progress_ba"
            android:layout_below="@id/address2"
            android:layout_width="120dp"
            android:layout_marginTop="1sp"
            android:layout_height="8sp"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:clipToOutline="true"
            android:background="@drawable/progressbar"
            />

        <android.support.v7.widget.AppCompatButton
            android:id="@+id/Loginbtn"
            android:layout_width="264dp"
            android:layout_height="42dp"
            android:layout_below="@id/progress_ba"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="69dp"
            android:layout_marginTop="18dp"
            android:layout_marginEnd="78dp"
            android:layout_marginBottom="99dp"
            android:background="@drawable/box_bg"
            android:backgroundTint="#37B943"
            android:gravity="center"
            android:text="Next"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/donthave"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/Loginbtn"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="47dp"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="585dp"
            android:fontFamily="@font/poppins"
            android:gravity="center_vertical"
            android:textSize="18sp"
            android:text="Already have an account? Sign in "
            android:textAppearance="@style/please_ent" />
</RelativeLayout>

