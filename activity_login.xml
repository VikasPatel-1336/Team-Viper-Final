<?xml version="1.0" encoding="utf-8"?>
<AbsoluteLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    tools:context=".LoginActivity"
    android:background="#EEEEEE" >

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="105dp"
        android:layout_alignParentTop="true"
        android:layout_marginStart="-7dp"
        android:outlineAmbientShadowColor="#8DE8968F"
        android:src="@drawable/shapes" />


    <ImageView
        android:id="@+id/login_img"
        android:layout_width="500dp"
        android:layout_height="wrap_content"


        android:layout_marginTop="24dp"

        android:layout_x="-50dp"
        android:layout_y="163dp"
        android:src="@drawable/logimg"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <TextView
        android:id="@+id/textView"

        android:layout_width="306dp"
        android:layout_height="30dp"
        android:layout_marginTop="40dp"
        android:layout_x="62dp"
        android:layout_y="133dp"
        android:fontFamily="@font/poppins"
        android:text="Welcome to Eco-lution"
        android:textColor="@color/black"
        android:textSize="26sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView"
        android:gravity="center"/>


    <EditText
        android:id="@+id/enterphone"
        android:layout_width="340dp"
        android:layout_height="56dp"
        android:layout_marginTop="60dp"
        android:layout_x="39dp"
        android:layout_y="420dp"

        android:background="@drawable/box_bg"
        android:gravity="center"
        android:hint="Enter phone number"
        android:inputType="phone"
        android:textColor="@color/black"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/login_img" />

    <EditText
        android:id="@+id/password"
        android:layout_width="343dp"
        android:layout_height="56dp"
        android:layout_marginLeft="32dp"
        android:layout_marginTop="28dp"
        android:layout_x="35dp"
        android:layout_y="488dp"
        android:background="@drawable/box_bg"

        android:gravity="center"
        android:hint="Enter password"
        android:inputType="textPassword"
        android:textColor="@color/black"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/enterphone" />

    <Button
        android:id="@+id/nextbutton"
        android:layout_width="309dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="36dp"
        android:layout_marginTop="44dp"
        android:layout_x="53dp"
        android:layout_y="589dp"
        android:background="@drawable/box_bg"
        android:backgroundTint="#37B943"
        android:textColor="@color/white"
        android:text="Next"
        android:textSize="15sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/password" />

    <TextView
        android:id="@+id/forgot"
        android:layout_width="129dp"
        android:layout_height="21dp"
        android:layout_marginTop="8dp"
        android:layout_marginRight="48dp"
        android:layout_x="132dp"
        android:layout_y="560dp"
        android:fontFamily="@font/poppins"
        android:text="Forgot password?"
        android:textColor="#006FFD" />

    <TextView
        android:id="@+id/donthaveac"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="52dp"
        android:layout_marginEnd="4dp"
        android:layout_x="50dp"
        android:layout_y="648sp"
        android:fontFamily="@font/poppins"
        android:text="Don't have an account? Sign up"
        android:textColor="#DE000000"
        android:textSize="21dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/signup"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/nextbutton"
        app:layout_constraintVertical_bias="0.3" />


</AbsoluteLayout>